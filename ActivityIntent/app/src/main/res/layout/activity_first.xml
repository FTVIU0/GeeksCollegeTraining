<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_first"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.nlte.activityintent.FirstActivity">
    <EditText
        android:id="@+id/et_input_msg"
        android:layout_margin="@dimen/et_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/hint_msg"/>
    <Button
        android:id="@+id/btn_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/btn_margin_left"
        android:layout_marginLeft="@dimen/btn_margin_left"
        android:text="@string/submit"/>

</LinearLayout>
