<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.nlte.compass.MainActivity">

    <TextView
        android:id="@+id/tvCompass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:padding="@dimen/tv_padding"
        android:textColor="@android:color/white"
        android:textSize="@dimen/tv_textSize"/>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">
        <com.nlte.compass.CompassView
            android:id="@+id/ivCompass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/compass_bg"
            android:padding="@dimen/iv_padding"
            android:src="@drawable/arrow"/>
    </FrameLayout>
    <TextView
        android:id="@+id/tvDegrees"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:padding="@dimen/tv_padding"
        android:textColor="@android:color/white"/>

</LinearLayout>
