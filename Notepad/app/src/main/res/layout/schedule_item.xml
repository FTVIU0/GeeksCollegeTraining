<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/rl_padding">

    <TextView
        android:id="@+id/tv_time_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/time_label"/>

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/tv_time_label"
        android:layout_toRightOf="@id/tv_time_label"/>

    <TextView
        android:id="@+id/tv_schedule_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_time_label"
        android:text="@string/schedule_label"/>

    <TextView
        android:id="@+id/tv_schedule_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_time_label"
        android:layout_toEndOf="@id/tv_schedule_label"
        android:layout_toRightOf="@id/tv_schedule_label"/>

</RelativeLayout>